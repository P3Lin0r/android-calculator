<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="buttonRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="numberButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">25sp</item>
        <item name="android:onClick">typeNumberAction</item>
    </style>
    <style name="functionalButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/light_brown</item>
        <item name="android:onClick">typeFunctionalSignAction</item>
    </style>
</resources>