<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/inky"
    tools:context=".MainActivity"
    android:padding="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/result_panel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <TextView
            android:id="@+id/inputValsTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:maxLines="2"
            android:text="Input vals"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="25sp"

            app:layout_constraintBottom_toTopOf="@+id/resultTV"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/resultTV"
            android:text="= Result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:lines="1"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textAlignment="textEnd"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        style="@style/buttonRow">

        <Button
            style="@style/functionalButton"
            android:text="AC"
            android:textColor="@color/orange"
            android:onClick="clearAllAction"/>
        <Button
            style="@style/functionalButton"
            android:text="⌫"
            android:textColor="@color/orange"
            android:onClick="backSpaceAction"/>
        <Button
            style="@style/functionalButton"
            android:text="%"
            android:onClick="percentAction"/>
        <Button
            style="@style/functionalButton"
            android:text="÷"
            android:textSize="30sp" />
    </LinearLayout>
    <LinearLayout
        style="@style/buttonRow">

        <Button
            style="@style/numberButton"
            android:text="7" />
        <Button
            style="@style/numberButton"
            android:text="8" />
        <Button
            style="@style/numberButton"
            android:text="9" />
        <Button
            style="@style/functionalButton"
            android:text="×"
            android:textSize="30sp" />
    </LinearLayout>
    <LinearLayout
        style="@style/buttonRow">

        <Button
            style="@style/numberButton"
            android:text="4" />
        <Button
            style="@style/numberButton"
            android:text="5" />
        <Button
            style="@style/numberButton"
            android:text="6" />
        <Button
            style="@style/functionalButton"
            android:text="-"
            android:textSize="40sp"/>
    </LinearLayout>
    <LinearLayout
        style="@style/buttonRow">

        <Button
            style="@style/numberButton"
            android:text="1" />
        <Button
            style="@style/numberButton"
            android:text="2" />
        <Button
            style="@style/numberButton"
            android:text="3" />
        <Button
            style="@style/functionalButton"
            android:text="+"
            android:textSize="30sp" />
    </LinearLayout>
    <LinearLayout
        style="@style/buttonRow">
        <Button
            style="@style/numberButton"
            android:text="0" />
        <Button
            style="@style/functionalButton"
            android:text=","
            android:onClick="commaAction"
            android:textSize="35sp"/>
        <Button
            style="@style/functionalButton"
            android:text="="
            android:textColor="@color/orange"
            android:onClick="equalsAction"
            android:textSize="35sp"
            android:layout_weight="2"/>
    </LinearLayout>
</LinearLayout>